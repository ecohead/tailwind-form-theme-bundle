{% use '@EcoheadTailwindFormTheme/helpers.html.twig' %}

{%- block money_row -%}
    <div{%- with { attr: row_attr } -%}{{ block('attributes') }}{%- endwith -%}>
        {%- with { attr: label_attr } -%}
            {{ block('form_label') }}
        {%- endwith -%}
        <div class="relative mt-1 rounded-md shadow-sm">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <span class="text-gray-500 sm:text-sm">â‚¬</span>
            </div>
            <input
                type="text"
                {% if value %}value="{{ value }}"{% endif %}
                {% if help is not null %}aria-describedby="{{ id ~ '_help' }}"{% endif %}
                {{ block('invalid_attrs') }}
                {%- with {
                    classes: 'block w-full rounded-md border-0 py-1.5 pl-7 pr-12 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 invalid:ring-rose-600 invalid:ring-2 aria-invalid:ring-rose-600 aria-invalid:ring-2 disabled:cursor-not-allowed disabled:opacity-50',
                    attr: attr|merge({
                        inputMode: 'decimal',
                        pattern: '\\d+[.,]?\\d+?',
                    })
                } -%}
                    {{ block('widget_attributes') }}
                {%- endwith -%}
            />
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
                <span class="text-gray-500 sm:text-sm">EUR</span>
            </div>
        </div>
        {%- with { attr: help_attr } -%}
            {{ block('form_help') }}
        {%- endwith -%}
        {{ block('form_errors') }}
    </div>
{%- endblock money_row -%}
